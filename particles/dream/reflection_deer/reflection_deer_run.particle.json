{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "es_bio:reflection_deer_run",
            "basic_render_parameters": {
                "material": "particles_blend",
                "texture": "textures/particle/dream/reflection_deer/reflection_deer_run.particle"
            }
        },
        "curves": {
            "variable.size": {
                "type": "linear",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [1, 0]
            }
        },
        "components": {
            "minecraft:emitter_rate_steady": {
                "spawn_rate": 3,
                "max_particles": 100
            },
            "minecraft:emitter_lifetime_looping": {
                "active_time": 3
            },
            "minecraft:emitter_shape_point": {
                "offset": ["math.random(0.2, -0.2)", 0.2, 0],
                "direction": [0, -1, 0]
            },
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": 1
            },
            "minecraft:particle_initial_speed": 0.5,
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": ["math.sin(v.particle_age * 90)", -10, "math.cos(v.particle_age * 40)"],
                "linear_drag_coefficient": 7
            },
            "minecraft:particle_appearance_billboard": {
                "size": ["0.3 * variable.size", "0.3 * variable.size"],
                "facing_camera_mode": "rotate_xyz"
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "v.particle_age / v.particle_lifetime",
                    "gradient": {
                        "0.0": "#FFFFE74D",
                        "1.0": "#00FFAB4D"
                    }
                }
            }
        }
    }
}
